<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Netko.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="Netko.Views.MainView"
             x:DataType="vm:MainViewModel">
	<UserControl.Styles>
		<Style>
			<StyleInclude Source="/GlobalSVGstyle.axaml"></StyleInclude>
		</Style>
	</UserControl.Styles>
  <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/GlobalResource.axaml"></ResourceInclude>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<UserControl.Transitions>
		<Transitions>
			<DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
		</Transitions>
	</UserControl.Transitions>
	<Grid ColumnDefinitions="Auto, *">

	<DockPanel Grid.Column="0" Grid.Row="0">
	<ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Left" DockPanel.Dock="Top">
		<DockPanel Margin="0" x:Name="SideButtonBar">
			<!--Function selection-->
			<Image Source="/Assets/logo.png" Height="120" Width="120" DockPanel.Dock="Top"/>
			<Button DockPanel.Dock="Top" Margin="5" Click="Change" Width="130" x:Name="Home" Background="Transparent">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource home}" Margin="10 0"/>
					<Label>主页</Label>
				</DockPanel>

			</Button>
			<Button DockPanel.Dock="Top" Margin="5" Click="Change" Width="130" x:Name="Manage" Background="Transparent">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource web_drive}" Margin="10 0"/>
					<Label>网盘管理</Label>
				</DockPanel>
			</Button>
			<Button DockPanel.Dock="Top" Margin="5" Click="Change" Width="130" x:Name="Transmit" Background="Transparent">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource download}" Margin="10 0"/>
					<Label>传输</Label>
				</DockPanel>

			</Button>
			<Button DockPanel.Dock="Top" Margin="5" Click="Change" Width="130" x:Name="Transfer" Background="Transparent">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource download}" Margin="10 0"/>
					<Label>下载管理</Label>
				</DockPanel>

			</Button>
			<Button DockPanel.Dock="Top" Margin="5" Click="Change" Width="130" x:Name="Upload" Background="Transparent">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource upload}" Margin="10 0"/>
					<Label>上传管理</Label>
				</DockPanel>
			</Button>

			<Button DockPanel.Dock="Top" Margin="5" Click="Change" Width="130" x:Name="History" Background="Transparent">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource history}" Margin="10 0"/>
					<Label>历史记录</Label>
				</DockPanel>


			</Button>

			<Button DockPanel.Dock="Bottom" Margin="5" Click="Change" Width="130" x:Name="Setting" Background="Transparent" VerticalAlignment="Bottom">
				<DockPanel>
					<PathIcon Classes="audio-on" Data="{StaticResource setting}" Margin="10 0"/>
					<Label>设置</Label>
				</DockPanel>

			</Button>

			<!-- END Function selection-->

		</DockPanel>
		
	</ScrollViewer>
		
		</DockPanel>
		<!--ScrollViewer Grid.Column="1" Grid.Row="0" >
			<Panel  Margin="5">
				<Border Background="{Binding sdadad}" CornerRadius="7" Padding="0" Margin="0" Opacity="0.3">
					</Border>
				<StackPanel Margin="7" x:Name="ContentPanel">
					
				</StackPanel>
			</Panel>
			
		</ScrollViewer-->
		<Panel  Margin="0 7 0 0"  Grid.Column="1" Grid.Row="0" >
			<!--Provide darker background-->
			<Border Background="{DynamicResource CatalogBaseHighColor}" CornerRadius="7 0 0 0" Padding="0" Margin="0" Opacity="1" BoxShadow="9 9 20 2 Black">
			</Border>
			<Panel Margin="7" x:Name="ContentPanel1">
			</Panel>
		</Panel>
		</Grid>
</UserControl>
