<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Netko.NetdiskPage">
	<UserControl.Styles>
		<Style>
			<Style.Resources>
				<StreamGeometry x:Key="Add">M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z</StreamGeometry>
			</Style.Resources>
		</Style>
	</UserControl.Styles>
	<Grid ColumnDefinitions="*" RowDefinitions="30, Auto, *">
		<Grid Grid.Column="0" Grid.Row="0" ColumnDefinitions="*, 25" RowDefinitions="Auto, Auto">
			
			<Button Grid.Column="1" Grid.Row="0">
				<PathIcon Data="{StaticResource Add}" Height="10" Width="10"/>
			</Button>
			<ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
				<!--Change User selection-->
				<DockPanel Margin="3" x:Name="UserSection">
					<Button>
						<PathIcon Data="{StaticResource Add}" Height="10" Width="10"/>
					</Button>
					<Button>
						<PathIcon Data="{StaticResource Add}" Height="10" Width="10"/>
					</Button>

				</DockPanel>

			</ScrollViewer>
			
		</Grid>
		<Separator Grid.Row="1" Margin="0" Padding="0"></Separator>
		<StackPanel x:Name="FileListPanel" Grid.Row="2"></StackPanel>
	</Grid>
</UserControl>
