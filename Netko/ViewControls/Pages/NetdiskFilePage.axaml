			<Button Grid.Row="0" Grid.Column="0" Background="Transparent">
				<PathIcon Data="{StaticResource Home}" Height="15" Width="15"/>
			</Button>
			<Button Grid.Row="0" Grid.Column="1" Background="Transparent">
				<PathIcon Data="{StaticResource Left}" Height="15" Width="15"/>
			</Button>
			<Button Grid.Row="0" Grid.Column="2" Background="Transparent">
				<PathIcon Data="{StaticResource Right}" Height="15" Width="15"/>
			</Button>
			<TextBox Grid.Row="0" Grid.Column="3" BorderBrush="Transparent" Background=""></TextBox>
			<Button Grid.Row="0" Grid.Column="4" Background="Transparent">
				<PathIcon Data="{StaticResource Refresh}" Height="15" Width="15"/>
